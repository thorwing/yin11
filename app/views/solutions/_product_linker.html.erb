<div id="product_linker" class="display_none clearfix">
    <%= form_tag url_for(controller: "products", action: "link", method: :post), :remote => true do %>
        <p><%= "将网上商品的地址粘帖在下方框中即可：" %></p>
        <%= text_field_tag "product_url", "" %>
        <%= submit_tag t("general.submit"), id: "link_prod_btn", class: "btn btn_ok lighter_touch", onclick: 'return pre_link_product(this);'%>
        <%= image_tag "loading.gif", id: "link_spinner", class: "display_none" %>
        <p class="trivial">已支持以下网上商城：</p>
        <div>
            <%= content_tag :span, t("syncs.sites.taobao"), class: "auth_btn_16 via_taobao_small" %>淘宝
        </div>
    <% end %>
</div>