<div class="content_block_inside">
    <h2><%= t("users.index") %></h2>

    <table>
      <tr>
        <th><%= t("users.login_name") %></th>
        <th>Email</th>
        <th>Role</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.login_name, [:admin, user] %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to t("general.show"), [:admin, user] %></td>
        <td><%= link_to t("general.edit"), edit_admin_user_path(user) %></td>
        <td><%= link_to t("general.delete"), [:admin, user], :confirm => t("general.are_you_sure_to_delete"), :method => :delete %></td>
      </tr>
    <% end %>
    </table>
</div>