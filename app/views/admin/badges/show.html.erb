<% title @badge.name %>

<%= render "badges/badge", :badge => @badge %>

<div class="actions">
    <%= link_to t("general.change"), edit_admin_badge_path(@badge), :class => "button" %> |
    <%= link_to t("general.delete"), [:admin, @badge], :confirm => t("general.are_you_sure_to_delete"), :method => :delete, :class => "button" %>
</div>

<div class="nav_links">
    <%= link_to t("general.back_to_list"), admin_badges_path, :class=> "button" %>
</div>