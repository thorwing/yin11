<div class="content_block_inside">
    <h2><%= t("vendors.vendors") %></h2>

    <div id="enabled_vendors">
      <h3><%= t("vendors.enabled_vendors") %></h3>
        <table>
          <tr>
            <th><%= t("general.name") %></th>
            <th><%= t("general.description") %></th>
            <th>Repeatable</th>
            <th>CountOfAwarded</th>
            <th></th>
            <th></th>
          </tr>

        <% @vendors.each do |vendor| %>
          <tr>
            <td><%= link_to vendor.name, [:admin, vendor] %></td>
            <td><%= link_to 'Show', [:admin, vendor] %></td>
            <td><%= link_to 'Edit', edit_admin_vendor_path(vendor) %></td>
            <td><%= link_to 'Destroy', [:admin, vendor], :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
        <% end %>
        </table>
    </div>


    <div id="disabled_vendors">
      <h3><%= t("vendors.disabled_vendors") %></h3>
          <% @disabled_vendors.each do |vendor| %>
            <%= link_to vendor.name, [:admin, vendor] %>
          <% end %>
    </div>

    <br />

    <%= link_to t("general.new"),new_admin_vendor_path, :class => "button" %>
</div>