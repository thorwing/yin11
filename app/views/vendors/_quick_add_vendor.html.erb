<%= form_tag url_for(:controller => "vendors", :method => :post), :remote => true do %>
    <div class="field">
        <%= label_tag "vendor[title]", t("general.email_address") %><%= mark_required(Vendor, :title) %><%= mark_required_length(Vendor, :title) %><br/>
        <%= text_field_tag :vendor, :title, :maxlength => get_max_length(Vendor, :title) %>
    </div>
    <div class="map_input">
        <b><%= t("location.city") %></b><br/>
        <%= content_tag(:span, current_city.name, :id => "current_city_name") %>
        <%= hidden_field_tag :vendor, :city, :class => "map_city" %>
        <br/>
        <b><%= t("location.street") %></b><br/>
        <%= text_field_tag :vendor, :street, :class => "map_street" %>
        <p><span id="map_address_span"></span><%= render "locations/map_indicator" %></p>
    </div>
    <div class="actions">
        <%= f.submit t("general.submit"), :class => "button" %>
    </div>
<% end %>