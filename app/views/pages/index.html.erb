<% title "页面列表" %>

<table>
  <tr>
    <th><%= t("general.title") %></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= link_to page.title, page %></td>
    <td><%= link_to t("general.edit"), edit_page_path(page), class: "button" %></td>
    <td><%= link_to t("general.delete"), page, confirm: 'Are you sure?', method: :delete, class: "button" %></td>
  </tr>
<% end %>
</table>

