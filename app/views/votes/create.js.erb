var vote_fields = $('.vote_fields.<%= @item.id.to_s %>');
vote_fields.find(".votes").text("<%= @votes.to_s %>");

<% if @is_fan %>
    var link = vote_fields.find(".vote_button.to_like");
    link.removeClass("to_like");
    link.addClass("liked");
<% else %>
    var link = vote_fields.find(".vote_button.liked");
    link.removeClass("liked");
    link.addClass("to_like");
<% end %>

<% if @is_hater %>
    var link = vote_fields.find(".vote_button.to_hate");
    link.removeClass("to_hate");
    link.addClass("hated");
<% else %>
    var link = vote_fields.find(".vote_button.hated");
    link.removeClass("hated");
    link.addClass("to_hate");
<% end %>

