<% title t("badges.badges") %>

<% if current_user %>
    <h2><%= t("badges.got") %></h2>
    <div class="block round">
        <ul class="thumb">
            <% current_user.badges.each do |badge| %>
                <li>
                    <%= link_to image_tag("badge.png",:border => 0), badge %>
                    <p class="caption"><%= link_to badge.name, badge %>
                    <%= "(" + badge.user_ids.size.to_s + ")" %></p>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>

<hr/>

<h2><%= t("badges.all") %></h2>
<div class="block round">
    <% @badges.each do |badge| %>
        <p><%= link_to image_tag("badge.png",:border => 0), badge %>
        <%= link_to badge.name, badge %>
        <%= "(" + badge.user_ids.size.to_s + ")" %>
        <%= content_tag :span, badge.description, :class => "trivial" %></p>
<% end %>
</div>

