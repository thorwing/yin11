<% title t("recipes.recipe_collection"), false %>
<div class="grid_9 to_left">
    <%= render "shared/waterfall", path: more_recipes_path, waterfall_partial: "recipes/recipe_waterfall", columns_count: 3, columns_width: 230 , tag: params[:tag]%>
</div>

<div class="grid_3 box_shadow to_right p5">
    <% if current_user_has_permission? :normal_user %>
        <div class="clearfix p5">
            <%= link_to "", new_recipe_path, class: "btn_addRecipe fl" %>
        </div>
        <hr/>
    <% end %>

    <div class="mb10">
        <h3><%= t("tags.hot_tags") %></h3>
        <% @hot_tags.each do |tag, weight| %>
                <%= link_to tag, {:controller => "recipes", :action => "index", :tag => tag} %>
        <% end %><br/>
        <%= link_to t("tags.more"), tags_path  %>
    </div>

    <% @records.each do |record|%>
      <div class="mb10">
        <h3><%= record["name"] %></h3>
        <% tags = record["detail"].split(' ') %>
        <% len = tags.size > 12 ? 12 : tags.size  %>
        <% tags[0..len-1].each do |tag|  %>
            <%= link_to tag, {:controller => "recipes", :action => "index", :tag => tag} %>
        <% end  %><br/>
        <%= link_to t("tags.more"), tags_path  %>
      </div>
    <% end  %>
</div>




