<% if params[:tag] %>
    <div class="ml25 mt5 mb5">
        <h2><%= "有关“#{params[:tag] }”的菜谱"%></h2>
    </div>
<% else %>
    <% title t("recipes.recipe_collection"), false %>
<% end %>

<div class="fl" style="width:720px;">
    <div id="masonry_container" class="clearfix">
        <% @recipes.each do |recipe| %>
            <%= render "recipes/recipe_item", recipe: recipe %>
        <% end %>
    </div>

    <nav id="page_nav">
        <% tag = params[:tag] || "null"  %>
        <%= link_to "", 'http://' + request.host_with_port + "/recipes/more/#{tag}/2" %>
    </nav>
</div>

<div class="grid_3 to_right">
  <div class="box_shadow p5">
    <% if current_user_has_permission? :normal_user %>
        <%= link_to "+添加菜谱", new_recipe_path, class: "button" %>
        <hr/>
    <% end %>
