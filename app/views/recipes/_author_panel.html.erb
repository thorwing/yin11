<div class="user_info_head_block grid_9">
  <!--< author = @recipe.author  %>-->
  <%= link_to image_tag(author.get_avatar(:thumb), :class => "fl"), profile_path(author) %><br/>

    <div class="user_profile fl">
        <span><username><%= author.screen_name %></username></span>
        <br/>
        <%= render "relationships/follow_field", :target => author %>
        <a ><%= link_to t("users.see_user_info"), user_path(author) %></a>
    </div>
    <div class="clearfix">
        <div class="userinfoCollection fr">
            <div class="collectList fl">
                <%= author.relationships.count%><br/>
                <%= t("user_basic.follows") %><br/>
            </div>

            <div class="collectList fl">
                <%= author.followers.count %><br/>
                <%= t("user_basic.fans") %>
            </div>

            <div class="collectList fl">
                <%= author.reviews.count %><br/>
                <%= t("user_basic.shares") %>
            </div>

        </div>
    </div>
    <div class="userInfoNav fl mt10">
        <a><%= t("feeds.feed")  %></a>
        <a><%= t("recipes.recipes") %></a>
        <a><%= t("control_panel.album") %></a>
        <a><%= t("control_panel.groups") %></a>
    </div>
</div>