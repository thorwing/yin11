$('#facebox #link_spinner').hide();
var container = $('#facebox #recipe_hints_container');
<% if @recipes.blank? || @recipes.empty? %>
    $('div.popup #recipe_not_found_label').show();
    container.find("tr").remove();
<% else %>
    $('div.popup #recipe_not_found_label').hide();
    container.show();
    container.find("tr:gt(0)").remove();
    <% @recipes.each do |recipe| %>
        var child = '<%= escape_javascript(render("solutions/recipe_hint", recipe: recipe)) %>';
        container.append(child);
    <% end %>
<% end %>
