<li class="addedclass single_step m10 fl" style="position:relative;width:230px;border-style:dashed;border-width:1px;border-color:gray;text-align: center;">
    <div class="trivial cursor" >拖拽这里调整顺序</div>
    <% html_options= { "class" => "btn btn_close", "style" => "position:absolute;right:-8px;top:-8px;" } %>
    <%= link_to_remove_fields( "", f, ".addedclass", ".steps", html_options ) %> <br/>
    <%= f.hidden_field :id unless f.object.new_record? %>
    <%= hidden_field_tag "authenticity_token", form_authenticity_token, :id => "tokentag" %>
    <div class="step_uploader"></div>
    <%= hidden_field_tag "step_image_url", (f.object.img_id && f.object.image) ?  f.object.image.picture_url(:thumb) : "", class: "hidden_step_image_url" %>

    <div class="clearfix"></div>
    <%= f.text_field :img_id, :maxlength => "10", :class => "img_id"  , :style => "display:none;" %>
    <%= f.text_area :content, :maxlength => get_max_length(Step, :content), 'data-comment_max_len' => get_max_length(Step, :content), :class => "char_aware step_content" %><br/>
    <%= content_tag :span, "", class: "char_saver display_none" %>
    <%= content_tag :span, "", :class => "char_counter" %>
</li>

