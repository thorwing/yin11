<div class="grid_3 addedclass to_left to_right">
    <%= hidden_field_tag "authenticity_token", form_authenticity_token, :id => "tokentag" %>
    <div class="step_uploader fl m5"></div>
    <%= javascript_tag "step_uploader();"%>
    <% url = (f.object.img_id && f.object.image) ?  f.object.image.picture_url(:thumb) : "" %>
    <%= javascript_tag "show('"+ url +"');" %>
    <div class="clearfix"></div>

    <%= f.text_field :img_id, :maxlength => "10", :class => "img_id", :style => "display:none"  %><br/>
    <%= f.text_area :content, :maxlength => get_max_length(Step, :content), 'data-comment_max_len' => get_max_length(Step, :content), :class => "char_aware step_content" %><br/>
    <%= link_to_remove_fields( t("recipes.remove"), f, ".addedclass", ".steps" ) %>
    <%= content_tag :span, "", class: "char_saver display_none" %>
    <%= content_tag :span, "", :class => "char_counter" %>
</div>

