<div class="grid_9">
    <div >
        <div class="final_img">
            <%= link_to image_tag(@recipe.steps.last.image.picture_url, :border => 0 )%>
        </div>

        <div class="ingredients_show">
            <p>
              <%= @recipe.recipe_name %>
            </p>
              <%= t("recipes.uploaded_by") + ": " + @recipe.author.screen_name %>
            <p>
              <b><%= t("recipes.ingredients") %></b> <br/>
            </p>
            <p>
              <% @recipe.ingredients.each do |f|%>
                  <% if(f.is_major_ingredient) %>
                    <%= t("recipes.major")  %>
                  <% else  %>
                    <%= t("recipes.minor")  %>
                  <%end%>
                  <%= f.name %>
                  <%= f.amount %>  <br/>
              <% end %>
            </p>
        </div>
    </div>

    <div class="steps_show grid_9 ">
        <p>
          <b><%= t("recipes.steps") %></b>
          <% @recipe.steps.each do |f|%>
              <div class="step_container grid_3 ">
                <div ><%= link_to image_tag( f.image.picture_url, :border => 0,:class=> "center", :size => "210x150" )%></div>
                <div class="step_content"><%= f.content %></div>
              </div>
          <% end %>
        </p>
    </div>
    <div class="grid_9">
        <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
        <%= link_to 'Back', recipes_path %>
    </div>
</div>

<div id = "product area" class="grid_3">
  <!--<= "tags" %>-->
  <!--<= @recipe.tags  %><br/><br/>-->
  <!--<= "major" %>-->
  <!--<= @major_tags %><br/><br/>-->
  <!--<= "minor" %>-->
  <!--<= @minor_tags %><br/><br/>-->
  <!--<= "user" %>-->
  <!--<= @user_tags %><br/><br/>-->
  <%= t("recipes.related_product") %>

  <% @related_product.each do |product| %>
      <li>
        <%= render "products/related _product", :product => product %>
        <%= product.price if product.price.present? %>
        <%= t("money.yuan") %><br/>
        <%= product.vendor.name %>
      </li>
  <% end %>
</div>
