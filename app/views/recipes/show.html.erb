<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @recipe.name %>
</p>

<p>
  <b>Ingredients:</b>
  <% @recipe.ingredients.each do |f|%>
      <%= f.name %>
      <%= f.amount %>  <br/>
  <% end %>
</p>

<p>
  <b>Steps:</b>
  <% @recipe.steps.each do |f|%>
      <%= f.content %> <br/>
      <!--<= f. %>-->
  <% end %>
</p>

