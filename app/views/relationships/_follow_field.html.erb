<% if current_user && current_user != target %>
    <span class="<%= target.id %>">
        <% established = current_user.has_followed?(target) %>
        <%= link_to "", relationships_path(:target_type => target.class.name, :target_id => target.id), :method => :post, :remote => true, :class => "btn btn_add_relationship #{established ? "hide" : "" }" %>
        <%= link_to "", cancel_relationships_path(:target_type => target.class.name, :target_id => target.id), :method => :put, :remote => true, :class => "btn btn_cancel_relationship #{established ? "" : "hide" }" %>
    </span>
<% end %>
