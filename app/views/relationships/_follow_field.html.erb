<% if current_user && current_user != target %>
    <span class="<%= target.id %>">
        <% established = current_user.has_followed?(target) %>
        <%= link_to "", relationships_path(:target_type => target.class.name, :target_id => target.id), :method => :post, :remote => true, :class => "add_relationship_btn#{" hide" if established}" %>
        <%= link_to "", cancel_relationships_path(:target_type => target.class.name, :target_id => target.id), :method => :put, :remote => true, :class => "cancel_relationship_btn#{" hide" unless established}" %>
    </span>
<% end %>
