<div class="p5">
    <p class="mb5">
        <b class="trivial"><%= label_tag "user[login_name]", t("user_basic.login_name")  %></b><br/>
        <%= text_field_tag "user[login_name]", current_user.login_name, :maxlength => get_max_length(current_user, :login_name) %>
    </p>
    <p class="mb5">
      <b class="trivial"><%= t("user_basic.biography") %></b><br/>
      <%= f.text_area :biography, rows: 5, maxlength: get_max_length(User, :biography), 'data-comment_max_len' => get_max_length(User, :biography), class: "char_aware" %>
      <%= content_tag :span, "", class: "char_saver display_none" %>
      <%= content_tag :span, "", :class => "char_counter block trivial" %>
    </p>
</div>
