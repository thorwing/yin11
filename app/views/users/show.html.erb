<div class="recipe_block grid_9 to_left mt10">
    <div class="clearfix box_shadow ">
        <%= render "users/author_panel", author: @user %>
    </div>
    <div class="tab_control mt10">
        <div class="tabContainer ">
            <% @modes.each do |mode| %>
                <div class = "<%= mode == @current_mode ? "selected" : "unselected" %>">
                    <%= link_to t("personal.#{mode}"), user_path(@user, mode: mode), "data-page" => ".#{mode}", class: "tab" %>
                </div>
            <% end %>
        </div>
        <div class="tabContent block">
          <% @modes.each do |mode| %>
             <div class = "<%= mode %> <%= mode == @current_mode ? "display" : "display_none" %>">
                <%= render "#{mode}_mode" %>
             </div>
          <% end %>
        </div>
    </div>
</div>