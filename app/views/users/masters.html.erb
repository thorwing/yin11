<h2 class="f16 mt10">明星达人</h2>
<div class="block box_shadow mt10">
    <% @stars.each do |star| %>
        <div class="grid_3 fl mt10 mb10" id="<%= star.id %>">
          <div class="hint_box">
            <div>
                <%= link_to image_tag(star.get_avatar, width: 200, height: 218), star %><br/>
            </div>
            <span class="fix_hint b_black white">
                <%= link_to star.screen_name, star %><br/>
                <span class="trivial"><%= t("reviews.by_user", count: star.reviews.size) %></span><br/>
                <span class="trivial"><%= t("recipes.by_user", count: star.recipes.size) %></span><br/>
                <span class="trivial"><%= t("user_basic.fans") + " " + star.followers.size.to_s %></span><br/>
                <%= render "relationships/follow_field", target: star %>
            </span>
          </div>
        </div>
    <% end %>

</div>

<div class="grid_9 mt20 to_left">
  <% @masters.each do |master| %>
    <%= render "users/user", user: master %>
  <% end %>
</div>

<div class="grid_3 mt20 to_right">
    <h3>今日红榜</h3>
    <% @hard_workers.each do |user| %>
        <div class="clearfix mt10">
            <div class="fl mr5"><%= link_to image_tag(user.get_avatar(:thumb), width: 48, height: 48), user %></div>
            <div class="fl">
                <span><%= link_to user.screen_name, user %></span><br/>
                <span class="trivial"><%= t("reviews.by_user", count: user.reviews.count) %></span><br/>
                <span class="trivial"><%= t("recipes.by_user", count: user.recipes.count) %></span>
            </div>
        </div>
    <% end %>
</div>

