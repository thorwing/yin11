<h2 class="f16 mt10">明星达人</h2>

<div class="to_left to_right clearfix">
  <% @masters.each do |master| %>
    <%= render "users/user", user: master %>
  <% end %>
</div>

<div class="mt20 to_left clearfix">
    <h3>今日红榜</h3>
    <% @hard_workers.each do |user| %>
        <div class="fl clearfix mt10" style="width:150px;">
            <div>
                <%= link_to image_tag(user.get_avatar(:thumb), width: 48, height: 48), user %><br/>
                <%= link_to user.login_name, user %>
            </div>
            <div>
                <span class="trivial"><%= t("reviews.by_user", count: user.reviews.count) %></span><br/>
                <span class="trivial"><%= t("recipes.by_user", count: user.recipes.count) %></span>
            </div>
        </div>
    <% end %>
</div>

