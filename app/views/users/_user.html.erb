<div class="master block round mt5 mb5 p5 fl">
    <div class="head fl">
      <%= link_to image_tag(user.get_avatar(:regular), "max-width" => AVATAR_WIDTH, "max-height" => AVATAR_HEIGHT), user %><br/>
    </div>
    <div class="desc fl">
       <%= link_to user.screen_name, user %><br/>
      <%= user.profile.biography %>
    </div>
    <div class="fr">
        <% user.get_recent_feeds(3).each do |feed| %>
          <div class="hint_box fl">
            <%= link_to image_tag(feed.picture_url), feed.item %>
            <span class="hint b_black white"><%= feed.content %></span>
          </div>
        <% end %>
    </div>
</div>