<% title t("tips.all_tips") %>

<p>Total: <%= @tips.size %> tips.</p>
<div>
    <table>
      <tr>
        <th><%= t("general.title") %></th>
        <th><%= t("general.disable") %></th>
        <th></th>
      </tr>

    <% @tips.each do |tip| %>
      <tr>
        <td><%= link_to tip.title, [:administrator, tip] %></td>
        <td><%= render "administrator/shared/toggle_fields", :item => tip, :field => :enabled %></td>
        <td><%= link_to t("general.delete"), administrator_tip_path(tip), :confirm => t("general.are_you_sure_to_delete"), :method => :delete %></td>
      </tr>
    <% end %>
    </table>
</div>
