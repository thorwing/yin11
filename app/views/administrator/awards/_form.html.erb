<%= content_for :head do %>
    <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/themes/redmond/jquery-ui.css"  %>
<% end %>

<%= form_for [:administrator, @award], :html => {:multipart => true}  do |f| %>
  <%= render "shared/error_messages", :target => @award %>

  <%= render "shared/text_field", f: f, label: t("general.name"), field: :name %>

  <%= render "shared/text_area", f: f, label: t("general.description"), field: :description %>

  <%= render "shared/text_field", f: f, label: "兑换积分", field: :score %>

  <%= render "shared/text_field", f: f, label: "总数", field: :total_volume %>

  <span>上传图片：</span>
  <%= file_field_tag :image, :accept => ACCECPTED_IMAGES %> <br/>

  <div class="field">
    <%= f.label :due_date %>
    <%= f.text_field :due_date, id: "date_time" %>
  </div>

  <div class="actions">
    <%= f.submit t("general.submit"), :class => "btn btn_ok" %>
  </div>
<% end %>
