<div id="recipes.recipes">
  <h3><%= t("recipes.recipes") %></h3>
  <%= @recipes.size.to_s %>
    <table class="formatted">
      <tr>
        <th><%= t("recipes.name") %></th>
        <th><%= t("recipes.ingredients_count") %></th>
        <th><%= t("recipes.steps_count") %></th>
        <th><%= t("recipes.uploaded_by") %></th>
        <th></th>
        <th></th>
      </tr>

    <% @recipes.each do |recipe| %>
      <tr id='<%= recipe.id %>'>
        <td><%= link_to recipe.name, recipe %></td>
        <td><%= recipe.ingredients.size %></td>
        <td><%= recipe.steps.size %></td>
        <td><%= recipe.author.login_name if recipe.author %></td>
        <td><%= link_to "", edit_recipe_path(recipe), :class => "btn btn_edit fl" %></td>
        <td><%= link_to "", [:administrator, recipe], :confirm => t("general.are_you_sure_to_delete"), :method => :delete, :class => "btn btn_delete fl" %></td>
      </tr>
    <% end %>
    </table>
</div>