<div class="clearfix mb15 lighter_touch">
    <%= link_to album.title, album %> |
    <%= link_to image_tag(album.author.get_avatar(:thumb), width: 20, height: 20), album.author, class: "m2" %>
    <%= link_to album.author.login_name, album.author %>
    <br/>
    <% urls = album.get_image_urls(3, :thumb) %>
    <% unless urls.empty? %>
        <% urls.each do |pic_url| %>
            <%= link_to image_tag(pic_url, :class => "lazy fl", width: 70, height: 70, alt: album.title), album %>
        <% end %>
    <% end %>
</div>