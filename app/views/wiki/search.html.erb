<% if @all_pages_found.size > 0 %>
    <%= @all_pages_found.size %> pages found
    <% @all_pages_found.each do |page| %>
        <%= link_to page.title, :action => "show", :title => @page.title %>
    <% end %>
<% else %>
    <%= t("wiki.no_result") %>
    <br/>
    <%= t("wiki.create_new_page_advice") %>「<%= link_to @query, :action => "new", :title => @query %>」

<% end %>