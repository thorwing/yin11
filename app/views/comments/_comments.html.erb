<h3><%= t("comments.all") %></h3>
<div id="comments">
    <%= nested_comments(item, patch_ancestry(item.comments.arrange(:order => :created_at))) %>
</div>

<%= content_tag(:p, t("comments.new_hint"), :class => "trivial") %>

<% if current_user %>
    <b><%= t("comments.new_comment") %></b><span class="trivial"></span><br/>
    <%= render "comments/new_comment", :item => item%>
<% end %>
