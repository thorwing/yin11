<% if current_user_has_permission? :normal_user %>
    <p>
        <%= link_to t("comments.comment"), "/comments/new?item_id=#{item_id}&item_type=#{item_type}", class: "reply_comment_link" %>
        <div class="new_reply_comment" style="display:none">
            <%= form_tag url_for(:controller => "comments", :method => :post), :remote => true do %>
                <%= hidden_field_tag :item_id, item_id %>
                <%= hidden_field_tag :item_type, item_type %>
                <%= text_area_tag :content, "", :maxlength => get_max_length(Comment, :content), :rows => 5, :class => "char_aware",
                'data-comment_max_len' => get_max_length(Comment, :content) %>
                <%= content_tag :span, "", :class => "char_counter" %>
                <%= submit_tag t("comments.new"), :class => "button" %>
            <% end %>
        </div>
    </p>
<% end %>