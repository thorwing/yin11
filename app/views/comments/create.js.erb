<% if @allowed %>
    var child = '<%= escape_javascript(render("single_comment", :item => @item, :comment => @new_comment) + content_tag(:div, '', :class => "nested_comments") ) %>';
    <% if @parent_comment %>
        var parent = $('#<%= @parent_comment.id.to_s %>');
        parent.nextAll('.nested_comments:first').append(child);
    <% else %>
         $("#comments").prepend(child);
    <% end %>

    //reset input
    $('textarea[name="content"]:visible').val('');
    $('.new_reply_comment:visible').hide();
<% else %>
    alert('<%= t("alerts.posted_comment_too_ofen", :minute => GlobalConstants::COMMENTS_INTERVAL) %>');
<% end %>