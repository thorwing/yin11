<% if @comment %>
    var child = '<%= escape_javascript(render("single_comment", :item => @item, :comment => @comment) + content_tag(:div, '', :class => "nested_comments") ) %>';
    <% if @parent %>
        $('#<%= @parent.id.to_s %>').nextAll('.nested_comments:first').append(child);
    <% else %>
         $("#comments").prepend(child);
    <% end %>

    //reset input
    $('textarea[name="content"]:visible').val('');
    $('.new_reply_comment:visible').hide();
    $('.first_comment_tip').remove();
<% elsif @over_limit %>
    alert('<%= t("alerts.posted_comment_too_ofen") %>');
<% end %>