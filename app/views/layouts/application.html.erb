<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <%= stylesheet_link_tag "application" %>
  <!--"http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/themes/redmond/jquery-ui.css" -->
  <%= yield :head if content_for?(:head) %>

  <!--<meta name="google-site-verification" content="GF_EoI9-lwWznbOBC3y1-joOBGeE7EBPEfui_-4vMZo" />-->
  <% if has_meta_tag? %>
      <meta name="description" content="<%= @meta_tag %>" />
  <% end %>
  <%= csrf_meta_tag %>
  <title>
    <% if home_page? %>
        <%= [t("site.name"), t("site.description")].join(' - ') %>
    <% else %>
        <%= @content_for_title + ' - ' if show_title? %><%= t("site.mark") %>
    <% end %>
    <%= t("site.name") %><%= " " + @content_for_title if show_title? %></title>
</head>
<body>

<%= display_flash %>
<%= render "shared/header" %>
<div id="main" class="container_12 mt10">
  <div id="container">
    <div id="content_area" class="block">
        <%= content_tag(:h1, @content_for_title, :class => "mb5") if show_title?  %>
        <%= content_for?(:content) ? yield(:content) : yield %>
    </div>
  </div>
</div>

<div id="footer">
  <div class="container_12 p5">
    <div class="grid_6">
        <h3><%= t("site.name") %></h3>
    </div>

    <div class="grid_3">
        <h3><%= t("footer.links") %></h3>
        <ul>
            <li><a href="http://railscasts.com/">Ruby On Rails</a></li>
        </ul>
    </div>

    <div class="grid_3">
        <ul>
            <li><%= new_tab_link_to t("syncs.sites.sina"), YIN11_SINA_WEIBO, class: "auth_btn_16 via_sina_small" %><%= new_tab_link_to t("syncs.follow_us_on_sina"), YIN11_SINA_WEIBO %></li>
        </ul>
    </div>
  </div>
</div>

<%= hidden_field_tag "current_user_id", current_user.id.to_s, id: "current_user_id" if current_user %>

<%= yield :deferred_javascript if content_for?(:deferred_javascript) %>

<% if request.host.include? "chixinbugai.com" %>
    <script type="text/javascript">
        var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
        document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3Fcee3691f72a9ba212bcd497391611bca' type='text/javascript'%3E%3C/script%3E"));
    </script>
<% elsif request.host.include? "meishikezhan.com" %>
    <script type="text/javascript">
        var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
        document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3F3584467c63415abf4ba3595550e27f0b' type='text/javascript'%3E%3C/script%3E"));
    </script>
<% elsif request.host.include? "yinkuaizi.com" %>
    <script type="text/javascript">
        var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
        document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3F7953e074056904992ba352e2358c0dc9' type='text/javascript'%3E%3C/script%3E"));
    </script>
<% end %>

    <!--Jquery_ui is for drag&drop-->
    <%= javascript_include_tag "application", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js" %>
    <%= yield :foot if content_for?(:foot) %>
</body>
</html>
