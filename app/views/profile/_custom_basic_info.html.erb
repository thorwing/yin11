<div class="block round">
    <b><%= label_tag "user[login_name]", t("user_basic.login_name")  %></b><br/>
    <%= text_field_tag "user[login_name]", current_user.screen_name, :maxlength => get_max_length(current_user, :login_name) %>
    <p>
      <b><%= t("user_basic.avatar") %></b><br/>
      <%= image_tag current_user.get_avatar, :class => "avatar" %><br/>
      <%= t("user_basic.change_avator") %><br/>
      <%= file_field_tag "user[avatar]" %> <br/>
    </p>
    <p>
      <b><%= t("user_basic.biography") %><%= mark_required_length(Profile, :biography) %></b><br/>
      <%= f.text_area :biography, rows: 5, maxlength: get_max_length(Profile, :biography), 'data-comment_max_len' => get_max_length(Profile, :biography), class: "char_aware" %>
      <%= content_tag :span, "", class: "char_saver display_none" %>
      <%= content_tag :span, "", :class => "char_counter block trivial" %>
    </p>
</div>
