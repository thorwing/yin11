<% if @desires && @desires.size > 0 %>
    <div id="desires_box" class="grid_12 mt20">
        <h2><%= "美食诱惑" %></h2>
        <ul id="filters" class="mt5">
            <% @hot_primary_tags.each do |tag| %>
                <li class="display_inline"><%= link_to tag.name, "#", "data-filter" => ".#{tag.name}", class: "filter f14 p5" %></li>
            <% end %>
            <%= link_to t("general.more"), desires_path, class: "fr" %>
            <div class="clearfix"></div>
        </ul>
        <div id="masonry_container" class="b_white">
          <div class="corner-stamp">
            <%= content_tag :span, "被这些美食图片馋到了吗？" %><br/>
            <%= content_tag :span, "点击看如何把它变成盘中餐！" %><br/>
            <%= link_to "+我也来馋人", new_desire_path, class: "desire_dialog_btn" %>
            <div id="desire_dialog" class="display_none">
                <%= render "desires/desire_fields", desire: Desire.new %>
            </div>
          </div>
          <% @desires.each do |desire| %>
            <div class="item <%= desire.tags.join(' ') %>" style="margin: 10px;">
              <div class="box_shadow p5" style="max-width: 200px;">
                <div class="center">
                    <%= link_to image_tag(desire.get_image_url(:waterfall), height: desire.get_image_height(:waterfall)), desire %>
                </div>
                <!--<span class="f14"><= link_to recipe.name, recipe %></span><br/>-->
                <!--<span><= truncate_content(recipe.description, 30) %></span>-->
                <%= truncate_content(desire.content, 50) %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
    <div class="clearfix"></div>
<% end %>