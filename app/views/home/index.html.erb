<% content_for :header_including do %>
     <%= stylesheet_link_tag  "s3Slider" %>
     <%= javascript_include_tag "home", "s3Slider" %>
<% end %>

<div id="news_block" class="block">
    <div class="block_inside">
        <div id="image_frame">
            <div id="s3slider">
               <ul id="s3sliderContent">
                 <% @hot_articles.each do |article| %>
                    <li class="s3sliderImage">
                        <%= link_to (image_tag "http://flickholdr.com/400/250", :width => 400, :height => 250, :border => 0), article  %>
                        <span><h3><%= article.title %></h3></span>
                  </li>
                 <% end %>
               </ul>
            </div>
        </div>
        <div id="articles_frame">
            <ul>
                <% @hot_articles.each do |article| %>
                    <li><h4><%= link_to article.title, article %></h4></li>
                <% end %>
            </ul>
        </div>
        <div id="search_frame">
            <h2><%= t("home.foods_buy_question") %></h2>
            <p><%= t("home.foods_buy_question_description") %></p>
            <%= form_tag '/foods', :method => :get do %>
                    <%= text_field_tag :foods %>
                    <%= submit_tag t("home.foods_search_button"), :class => "button" %><br/>
                    <p class="trivial"><%= t("home.multiple_foods_suggestion")  %></p>
            <% end %>
        </div>
    </div>
</div>

<div id="actions_menu">
    <%= link_to t("reviews.new_review"), new_review_path, :class => "button" %>
    <%= link_to t("questions.new_question"), "#", :class => "button" %>
</div>

<div class="two_columns_container" >
    <div id="reviews_page" class="left_column">
    <% @reviews.each_with_index do |review, index| %>
        <%= render "shared/review_item", :review => review, :index => index %>
    <% end %>
    </div> <!--end of info_items -->

     <div id="control_panel" class="right_column">
        <% if current_user %>
            <div id="user_panel" class="sub_panel">
                <h3><%= current_user.login_name %></h3>
                <%= get_avatar(current_user) %>
            </div>
            <div id="foods_watching_list" class="sub_panel">
                <% if @watching_foods && @watching_foods.size > 0 %>
                    <h3><%= t("home.control_panel.watching_foods") %></h3>
                    <% @watching_foods.each do |food| %>
                        <p>
                          <%= food.name %> <%= get_severity_of_food(food) %>
                        </p>
                    <% end %>
                    <%= link_to t("home.control_panel.more"), "#" %>
                <% end %>
                <%= form_tag :action => "watch_foods" do %>
                    <%= text_field_tag "added_foods" %>
                    <%= submit_tag t("general.add"), :class => "button" %>
                    <p class="trivial"><%= t("home.control_panel.add_foods_suggestion") %></p>
                <% end %>
            </div>
            <div id="address_watching_list" class="sub_panel">
                <%= link_to t("home.control_panel.update_profile"), profile_edit_path %>
                <span class="trivial"><%= t("home.control_panel.add_address_suggestion") %></span>
            </div>
        <% else %>
            <div id="login_panel" class="sub_panel">
                <h3><%= t("authentication.quick_login")  %></h3>
                <%= render "shared/quick_login" %>
            </div>
        <% end %>

        <div id="foods_buzz" class="sub_panel">
          <% if @foods_buzz %>
              <h3><%= t("home.foods_buzz") %></h3>
              <% @foods_buzz.each do |category, foods| %>
                <h4><%= category.name if category %></h4>
                <% foods.each do |food| %>
                    <h5><%= food.name %></h5>
                <% end %>
                <br/>
              <% end %>
          <% end %>
        </div> <!--end of foods_buzz -->

    </div> <!--end of control_panel -->
</div><!--end of two_columns_block -->








