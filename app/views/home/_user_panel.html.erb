<% if current_user %>
    <div id="user_panel" class="panel">
        <b><%= link_to current_user.login_name, profile_path(current_user) %></b><br/>
        <%= image_tag current_user.get_avatar, :class => "avatar" %><br/>

        <b><%= t("control_panel.actions") %></b><br/>
        <%= link_to t("reviews.new"), new_review_path, :class => "button" %>
        <%= link_to t("tips.new"), new_tip_path, :class => "button" if current_user && current_user.has_permission?(:editor) %>
        <%= link_to t("articles.new"), new_admin_article_path, :class => "button" if current_user && current_user.has_permission?(:editor) %>
        <%= link_to t("vendors.browse"), vendors_path, :class => "button" %>
    </div>
<% end %>