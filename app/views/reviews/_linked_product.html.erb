<div class="product fl mr5">
    <div class="hint_box">
        <%= link_to image_tag(picture_url, class: "thumbnail"), product %>
        <span class="fix_hint b_black white f11"><%= product.name %></span>
    </div>
    <%= link_to image_tag("/assets/close_x.png", alt: "delete_product"), "", onclick: "delete_product(this); return false;", class: "del_link lighter_touch" %>
    <%= hidden_field_tag "review[product_ids][]", product.id.to_s, id: "product_" + product.id.to_s %>
</div>