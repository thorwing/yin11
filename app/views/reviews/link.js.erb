$("#link_spinner").hide();

<% if @valid%>
  <% if @product %>
    $(document).trigger('close.facebox');
    var product_field = '<input id="products_" type="hidden" value="' + "<%= @product.id.to_s %>" + '" name="review[product_ids][]"/>';
    append_image("<%= @product.id.to_s %>", "<%= @product.get_image_url(true) %>", product_field);
  <% else %>
    alert("抱歉，未能找到该商品");
  <% end %>
<% else %>
  alert("请输入正确的地址");
<% end %>
