$("#link_spinner").hide();

<% if @valid %>
  <% if @product %>
    $(document).trigger('close.facebox');

    if(document.getElementById("product_" + "<%= @product.id.to_s %>")) {
      alert("已添加了该商品");
    }
    else {
        var new_product = '<%= escape_javascript(render("reviews/linked_item", :item => @product)) %>';
        $('#images_container').append(new_product);
    }
  <% else %>
    alert("抱歉，未能找到该商品");
  <% end %>
<% else %>
  alert("请输入正确的地址");
<% end %>
