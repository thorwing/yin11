<div class="new_comment">
    <%= form_tag :controller => "reviews", :action=> "add_comment" do %>
      <%= hidden_field_tag :parent_comment_id, params[:parent_comment_id]%>
      <p>
        <%= label_tag :content, "New Comment" %><br />
        <%= text_area_tag :content, "", :rows => 8 %>
      </p>
      <p><%= submit_tag t("comments.post") %></p>
    <% end %>
</div>