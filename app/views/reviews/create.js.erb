<% if @review %>
    var reviews = $("#reviews");
    if (reviews.length > 0) {
        var child = '<%= escape_javascript(render @review) %>';
        reviews.prepend(child);
    }
<% end %>

<% if @feed %>
    var feeds = $("#all_feeds");
    if (feeds.length > 0) {
        var child = '<%= escape_javascript(render @feed) %>';
        feeds.prepend(child);
    }
<% end %>

var local_status = "<%= @local_status %>";

if(local_status == "true")
{
    jQuery.facebox( '<img border="0" src="/assets/correct_icon.gif" alt="correct"><span><%= @user_message %></span>');

    $('#review_content').val('');
    $('#images_container').html('');
}
else
{
    jQuery.facebox( '<img border="0" src="/assets/wrong_icon.gif" alt="wrong"><span><%= @user_message %></span>');
}

setTimeout("after_delay()", parseInt("<%= REVIEW_DIALOG_DELAY %>"));
//  setTimeout("after_delay()",2000);

function after_delay()
{
    jQuery(document).trigger('close.facebox');
//    alert("OK");
}

