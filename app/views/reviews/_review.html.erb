<div class="listed_item commentable clearfix">
    <div class="user_info_area">
        <%= link_to image_tag("grey.gif", "class" => 'lazy', "data-original"=> review.author.get_avatar(:thumb, false ), width: "48", height: "48"), review.author %><br/>
        <%= link_to review.author.login_name, review.author %>
    </div>
    <div class="content_area">
        <div class="clearfix">
            <% review.get_linked_items.each do |item| %>
                <div class="fl mr5 hint_box">
                    <%= link_to image_tag(item.get_image_url(:thumb), class: "thumbnail"), item %><br/>
                    <span class="flex_hint black b_white f12"><%= link_to truncate_content(item.name, 18), item %></span>
                    <% if item.is_a?(Product) %>
                      <%= image_tag("icons/cart.png", width: 16, height: 16, class: "linked_item_icon") %>
                    <% elsif item.is_a?(Recipe) %>
                      <%= image_tag("icons/recipe.png", width: 16, height: 16, class: "linked_item_icon") %>
                    <% end %>
                </div>
            <% end %>

            <% review.images.each do |image| %>
                <div class="image mr5 fl">
                    <%= link_to image_tag("grey.gif", "data-original"=> image.picture_url(:thumb), alt: "image_thumbnail", class: "lazy thumbnail"), image.picture_url, rel: "facebox" %>
                </div>
            <% end %>
        </div>
        <p>
            <%= review.content %> <%= link_to t("general.details"), review %>
        </p>
        <div>
            <span class="fl trivial"><%= review.created_at.strftime(GENERAL_TIME_FORMAT) %></span>
            <div class="fr">
                <%= render "votes/vote_fields", :item => review %>
            </div>
            <div class="fr mr20">
                <%= link_to_function t("comments.new"), "show_embedded_comments(this);" %> (<span class="comments_counter"><%= review.comments.size %></span>)
            </div>
        </div>
        <div class="embedded_comments display_none">
            <%= render "comments/comments", item: review %>
        </div>
    </div>
</div>
<hr/>
