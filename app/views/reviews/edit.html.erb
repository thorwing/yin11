<% title t("reviews.edit_review" ) %>

<%= form_for(@review) do |f| %>
  <%= render "shared/error_messages", :target => @review %>

  <div class="field">
    <b><%= f.label :content, t("general.content") %></b><br />
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit t("general.submit"), :class => "button" %>
  </div>
<% end %>
