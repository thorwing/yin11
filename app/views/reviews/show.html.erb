<% title t("reviews.title"), false%>

<div class="grid_9 to_left">
    <%= render "shared/vote_fields", :item => @review %>
    <div class="clearfix"></div>

    <p>
        <% if @review.author %>
            <%= link_to @review.author.screen_name, @review.author %>:
        <% end %>
        <%= @review.content %>
    </p>
    <div id="gallery">
        <% @review.get_review_all_image_url.each do |picture_url| %>
            <div class="img_frame">
              <%= link_to image_tag(picture_url, width: IMAGE_THUMB_WIDTH, height: IMAGE_THUMB_HEIGHT), picture_url, rel: "facebox" %>
            </div>
        <% end %>
    </div>

    <% if the_author_himself(Review.name, @review.id, true, false) %>
        <div>
            <%= link_to t("general.edit"), edit_review_path(@review), class: "button" %>
        </div>
    <% end %>

    <hr/>
    <%= render "comments/comments", :item => @review %>
</div>

<div class="grid_3 box_shadow to_right">
  <p class="maintitle"><span class="bigfs">您可能还爱吃？</span></p>
  <div class="related_product_block">
    <% @related_products.each do |product| %>
        <li>
          <%= render "products/related _product", :product => product %>
        </li>
    <% end %>
  </div>
</div>




