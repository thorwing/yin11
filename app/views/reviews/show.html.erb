<% title t("reviews.title"), false%>

<div class="grid_9 to_left">
    <div class="fr">
        <%= render "shared/vote_fields", :item => @review %>
    </div>
    <% if @review.author %>
        <%= link_to image_tag(@review.author.get_avatar(:thumb), width: AVATAR_THUMB_WIDTH, height: AVATAR_THUMB_HEIGHT), @review.author %>
        <%= link_to @review.author.screen_name, @review.author %><br/>
    <% end %>

    <div class="clearfix"></div>
    <p>
        <%= @review.content %>
    </p>
    <div id="gallery" class="clearfix">
        <% @review.get_images_with_objects.each do |hash| %>
          <div class="fl mr5 w_image">
            <% if hash[:object] %>
                <%= link_to image_tag(hash[:picture_url], width: IMAGE_THUMB_WIDTH, height: IMAGE_THUMB_HEIGHT), hash[:object] %>
                <p><%= link_to hash[:object].name, hash[:object] %></p>
            <% else %>
                <%= link_to image_tag(hash[:picture_url], width: IMAGE_THUMB_WIDTH, height: IMAGE_THUMB_HEIGHT), hash[:picture_url], rel: "facebox" %>
            <% end %>
          </div>
        <% end %>
    </div>

    <% if the_author_himself(Review.name, @review.id, true, false) %>
        <div>
            <%= link_to t("general.edit"), edit_review_path(@review), class: "button" %>
        </div>
    <% end %>

    <hr/>
    <%= render "comments/comments", :item => @review %>
</div>

<div class="grid_3 box_shadow to_right">
  <%= render "products/related_products", products: @related_products %>
</div>




