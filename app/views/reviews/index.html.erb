<% title t("reviews.reviews"), false %>

<div>
    <%= image_tag "reviews_banner.png" %>
</div>

<div class="grid_9 to_left">
    <%= render "shared/waterfall", :path => more_reviews_path, :waterfall_partial => "reviews/review_waterfall", :columns_count => 3, :columns_width => 230 %>
</div>

<div class="grid_3 to_right">
   <h3><%= t("tags.hot_tags") %></h3>
    <% @hot_tags.each do |tag, weight| %>
            <%= link_to tag, {:controller => "recipes", :action => "index", :tag => tag} %>
    <% end %><br/>
    <%= link_to t("tags.more"), tags_path  %>
    <br/><br/>

    <% @records.each do |record|%>
        <h3><%= record["name"] %></h3>
        <% tags = record["detail"].split(' ') %>
        <% len = tags.size > 12 ? 12 : tags.size  %>
        <% tags[0..len-1].each do |tag|  %>
            <%= link_to tag, {:controller => "recipes", :action => "index", :tag => tag} %>
        <% end  %><br/>
        <%= link_to t("tags.more"), tags_path  %>
        <br/><br/>
    <% end  %>
</div>

