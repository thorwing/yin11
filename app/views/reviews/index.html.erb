<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Comment</th>
    <th>Severity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @my_reviews.each do |review| %>
  <tr>
    <td><%= review.title %></td>
    <td><%= review.comment %></td>
    <td><%= "severity:" + review.severity.to_s %></td>
    <td><%= link_to t("general.show"), review %></td>
    <td><%= link_to t("general.edit"), edit_review_path(review) %></td>
  </tr>
<% end %>
</table>

