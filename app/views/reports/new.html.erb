<h2><%= t("general.report") %></h2>

<%= form_tag @report, :remote => true do%>

  <div class="field">
    <%= label_tag "report[email]", t("general.email_address") %><%= mark_required(@report, :email) %><%= mark_required_length(@report, :email) %><br/>
    <%= text_field_tag "report[email]", @report.email, :maxlength => get_max_length(@report, :email) %>
  </div>
  <div class="field">
    <%= label_tag "report[content]", t("general.content") %><%= mark_required(@report, :content) %><%= mark_required_length(@report, :content) %><br/>
    <%= text_area_tag "report[content]", "", :maxlength => get_max_length(@report, :content) %>
  </div>
  <div class="actions">
    <%= submit_tag t("general.submit"), :class => "button" %>
  </div>
<% end %>
