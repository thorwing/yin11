<%= form_for(@tip) do |f| %>
  <%= render "shared/error_messages", :target => @tip %>

  <%= render "shared/text_field", :f => f, :label => t("general.title"), :field => :title %>
  <%= render "shared/text_area", :f => f, :label => t("general.content"), :field => :content %>

  <div class="field">
     <b><%= f.label :tags_string, t("info_items.tags") %></b><br/>
     <%= f.text_field :tags_string, 'data-pre' => (@tip.tags ? @tip.tags.map { |t| { :id => t, :name => t }} : []).to_json %>
  </div>
  <div class="actions">
    <%= f.submit t("general.submit"), :class => "button" %>
  </div>
<% end %>
