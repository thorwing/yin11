<%= form_for(@tip) do |f| %>
  <%= render "shared/error_messages", :target => @tip %>

  <div class="field">
    <%= f.label t("general.title") %><%= mark_required(@tip, :title) %><%= mark_required_length(@tip, :title) %><br/>
    <%= f.text_field :title, :maxlength => 20 %>
  </div>
  <div class="field">
    <%= f.label t("general.content") %><%= mark_required(@tip, :content) %><%= mark_required_length(@tip, :content) %><br/>
    <%= f.text_area :content, :maxlength => 10000, :rows => 8 %>
  </div>
  <div class="field">
     <%= f.label :tags_string, t("info_items.tags") %><br/>
     <%= f.text_field :tags_string, 'data-pre' => (@tip.tags ? @tip.tags.map { |t| { :id => t, :name => t }} : []).to_json %>
  </div>
  <div class="actions">
    <%= f.submit t("general.submit"), :class => "button" %>
  </div>
<% end %>
