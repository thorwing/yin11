<div class="block round">
    <div>
        <%= render "shared/vote_fields", :item => tip %>
    </div>
    <div >
        <b><%= link_to tip.title, tip, 'data-content' => simple_format(word_wrap(tip.content, 40)), :class => "tip" %></b><br/>
        <div class="clues">
            <%= render "shared/show_tags", :item => tip %>
        </div>
    </div>
    <div class="right_fields">
        <%= link_to t("tips.collect"), collect_tip_path(tip), :method => :put, :class => "button" if (current_user and not is_already_collected(tip)) %>
    </div>
</div>