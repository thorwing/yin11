<% if target.errors.any? %>
<div id="errorExplanation" class="block">
  <div class="block_inside">
      <h3><%= t("validations.header_msg") %></h3>
      <ul>
      <% target.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  </div>
</div>
<% end %>