<div class="clearfix">
  <div class="fr">
      <% if current_user %>
        <span class="nav_menu">
          <span class="menu">
            <%= link_to(current_user.screen_name, profile_path(current_user.profile)) %>
          </span>
            <ul>
                <li><%= link_to t("menu.edit_profile"), edit_profile_path(current_user.profile) %></li>
                <li><%= link_to t("menu.logout"), logout_path %></li>
            </ul>
        </span>
      <% else %>

        <span id= "three_third_partys" >
            <%= link_to image_tag("third_party/sina_blog.png", :border => 0, :alt => t("syncs.sites.sina_blog")) + t("syncs.sites.sina_blog"), "syncs/sina/new", :id => "login_via_sinablog" %>
            <%= link_to image_tag("third_party/taobao.png", :border => 0, :alt => t("syncs.sites.taobao")) + t("syncs.sites.taobao"), "syncs/taobao/new", :id => "login_via_taobao" %>
            <%= link_to image_tag("third_party/renren.png", :border => 0, :alt => t("syncs.sites.renren")) + t("syncs.sites.renren"), "syncs/renren/new", :id => "login_via_renren" %>
        </span>

        <span class="nav_menu">
            <%= link_to(t("syncs.more"), "#" ,:class => "menu") %>
            <ul id= "third_party_submenu">
                <li><%= link_to image_tag("third_party/douban.png", :border => 1, :alt => t("syncs.sites.douban")) + t("syncs.sites.douban") + "  ", "syncs/douban/new", :id => "login_via_douban" %></li>
                <li><%= link_to image_tag("third_party/qq_blog.png", :border => 0, :alt => t("syncs.sites.qq_blog")) + t("syncs.sites.qq_blog"), "syncs/qq/new", :id => "login_via_qqblog" %></li>
                <li><%= link_to image_tag("third_party/sohu_blog.gif", :border => 0, :alt => t("syncs.sites.sohu_blog")) + t("syncs.sites.sohu_blog"), "syncs/sohu/new", :id => "login_via_sohublog" %></li>
                <li><%= link_to image_tag("third_party/netease_blog.png", :border => 0, :alt => t("syncs.sites.netease_blog"))+ t("syncs.sites.netease_blog"), "syncs/netease/new", :id => "login_via_neteaseblog" %></li>
            </ul>
        </span>

      <% end %>

      <% unless hide_quick_auth? %>
        <%= link_to t("authentication.sign_up"), sign_up_path %>
        <%= link_to t("authentication.login"), login_path %>
      <% end %>
  </div>
</div>
