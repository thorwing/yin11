<%=  %>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag t("authentication.email") %><br />
    <%= email_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag t("authentication.password") %><br />
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= check_box_tag "remember_me", "1", true %>
    <%= t("authentication.remember_me") %>
  </p>
  <%= submit_tag t("authentication.log_in") %>
  <br/>
  <%= link_to t("authentication.sign_up"), sign_up_path %>
<% end %>