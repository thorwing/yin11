<div class="comment">
    <%= comment.user.login_name %>:
    <blockquote>
      <span class="quoted"><%= comment.content %></span>
      <span class="trivial"><%= distance_of_time_in_words(comment.updated_at, Time.now) %><%= t("info_items.ago") %></span>
    </blockquote>
    <div class="actions">
        <%= link_to t("comments.reply"), home_new_comment_path(:id => item.id, :type => item.class.name, :parent_comment_id => comment.id) %>
    </div>
</div>
