<script type="tpl" id="tpl">
    <div class="waterfall grid_3 box_shadow" data-id="{{id}}">
        <% if path %>
            <a href="<%= "#{path}/{{id}}" %>" class="image"><img alt="{{name}}" src="{{picture_url}}" /></a>
        <% else %>
            <a href="<%= "{{target_path}}" %>" class="image"><img alt="{{name}}" src="{{picture_url}}" /></a>
        <% end %>
        <% if show_name %>
            <span class="ml10 f16">{{name}}</span><br/>
        <% end %>
        <div class="user_info ml10">
            <div>
                <a href="users/{{user_id}}" class="fl mr10" onmouseover='show_user_info($(this));'>
                    <img height="<%= AVATAR_THUMB_HEIGHT %>" width = "<%= AVATAR_THUMB_WIDTH %>" alt="avatar" src="{{user_avatar}}" />
                </a>
                <%= link_to "{{user_name}}", "users/{{user_id}}", class: "fl" %><br/>
            </div>
            <div class="more_user_info box_shadow display_none" onmouseout='$(this).hide();'>
                <%= render "relationships/follow_field_waterfall" %><br/>
                <span class="trivial"><%= t("reviews.by_user", count: "{{user_reviews_cnt}}") %></span><br/>
                <span class="trivial"><%= t("recipes.by_user", count: "{{user_recipes_cnt}}") %></span><br/>
            </div>
        </div>
        <div class="ml10">
            <% if show_content %>
                <p>{{content}}</p>
            <% end %>
            <span class="trivial">{{time}}</span>
        </div>
    </div>
</script>

