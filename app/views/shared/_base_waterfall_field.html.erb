<script type="tpl" id="tpl">
    <div class="ks-waterfall box_shadow" height="{{height}}" data-id="{{id}}">
        <% link_path = path ? "#{path}/{{id}}" : "{{target_path}}" %>
        <% if path %>
            <div class="center"><a href="<%= link_path %>" class="image" ><img alt="{{name}}" src="{{picture_url}}" height="{{picture_height}}" /></a></div>
        <% else %>
            <div class="center"><a href="<%= link_path %>" class="image" ><img alt="{{name}}" src="{{picture_url}}" height="{{picture_height}}" /></a></div>
        <% end %>
        <div class="ml10 mr10 clearfix">
            <% if show_name %>
                <div class = "f16"><%= link_to "{{name}}", link_path %></div>
            <% end %>
            <% if show_content %>
                <p>
                  {{content}} <span class="display_inline_block">
                  <%= link_to t("general.details"), link_path %></span>
                </p>
            <% end %>
            <span class="trivial">{{time}}</span>
        </div>

        <div class="user_info fl ml10 mr10 clearfix">
            <div class="fl">
                <a href="users/{{user_id}}"  class="mr10">
                    <img alt="avatar" width="48" height="48" src="{{user_avatar}}" />
                </a><br/>
                <%= link_to "{{user_name}}", "users/{{user_id}}"%>
            </div>
        </div>
    </div>
</script>

