<script type="tpl" id="tpl">
    <div class="ks-waterfall box_shadow" height="{{height}}" data-id="{{id}}">
        <% link_path = path ? "#{path}/{{id}}" : "{{target_path}}" %>
        <% if path %>
            <div class="center"><a href="<%= link_path %>" class="image" ><img alt="{{name}}" src="{{picture_url}}" height="{{picture_height}}" /></a></div>
        <% else %>
            <div class="center"><a href="<%= link_path %>" class="image" ><img alt="{{name}}" src="{{picture_url}}" height="{{picture_height}}" /></a></div>
        <% end %>

        <div class="user_info ml10 mr10 b_shadow_gray clearfix">
            <div class="fl">
                <a href="users/{{user_id}}"  class="mr10">
                    <img alt="avatar" width="32" height="32" src="{{user_avatar}}" />
                </a><br/>
            </div>
            <div class="fl">
                <%= link_to "{{user_name}}", "users/{{user_id}}"%><br/>
                <% if show_name %><span><%= link_to "{{name}}", link_path %></span><% end %>
                <% if show_content %>{{content}}<% end %>
            </div>
        </div>
    </div>
</script>

