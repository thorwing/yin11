<script type="tpl" id="tpl">
    <div class="waterfall grid_3 box_shadow" height="{{height}}" data-id="{{id}}">
        <% if path %>
            <div align="center"><a href="<%= "#{path}/{{id}}" %>" class="image" ><img alt="{{name}}" src="{{picture_url}}" height="{{picture_height}}" /></a></div>
        <% else %>
            <div align="center"><a href="<%= "{{target_path}}" %>" class="image" ><img alt="{{name}}" src="{{picture_url}}" height="{{picture_height}}" /></a></div>
        <% end %>
        <div class="ml10 mr10 clearfix">
            <% if show_name %>
                <div class = "f16"><%= link_to "{{name}}", "#{path}/{{id}}" %><br/></div>
                <!--<span class="ml10 f16">{{name}}</span><br/>-->
            <% end %>
            <% if show_content %>
                <p>
                  {{content}} <span class="display_inline_block"><%= link_to t("general.details"), "#{path}/{{id}}" %></span>
                </p>
            <% end %>
            <span class="trivial">{{time}}</span>
        </div>

        <div class="user_info fl ml10 mr10 clearfix">
            <div class="fl">
                <a href="users/{{user_id}}"  class="mr10">
                    <img alt="avatar" width="48" height="48" src="{{user_avatar}}" />
                </a><br/>
                <%= link_to "{{user_name}}", "users/{{user_id}}"%>
            </div>
        </div>
    </div>
</script>

