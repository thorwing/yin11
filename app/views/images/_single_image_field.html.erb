<div class="image fl ">
    <%= hidden_field_tag "images[]", image.id %>
    <%= link_to_function image_tag("cancel.png", :border => 0), "delete_image(this, #{IMAGES_LIMIT})", 'data-image_id' => image.id, class: "del_img_link lighter_touch" %><br/>
    <%= link_to image_tag(image.picture_url, :border => 0, :width => IMAGE_THUMB_WIDTH, :height => IMAGE_THUMB_HEIGHT, :alt => "image_thumbnail"),
        image.picture_url, :title => image.caption, :rel => "facebox" , :class => "thumbnail" %>
</div>
