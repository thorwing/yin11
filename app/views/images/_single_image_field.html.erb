<div class="image fl ">
    <%= hidden_field_tag "images[]", image.id %>
    <%= link_to_function "删除", "delete_related_item(this)", class: "del_link btn btn_delete_x lighter_touch" %><br/>
    <%= link_to image_tag("grey.gif", "class" => 'lazy', "data-original"=> image.picture_url, :border => 0, :width => IMAGE_THUMB_WIDTH, :height => IMAGE_THUMB_HEIGHT, :alt => "image_thumbnail"),
        image.picture_url, :title => image.caption, :rel => "facebox" , :class => "thumbnail" %>
</div>
