<% if current_user %>
    <div id="user_panel" class="panel clearfix">
        <b><%= link_to current_user.screen_name, profile_path(current_user) %></b><br/>
        <%= link_to image_tag(current_user.get_avatar(:thumb), :border => 0, :class => "avatar"), profile_path(current_user) %><br/>

        <div class="block">
            <div class ="fl m5">
                <%= t("user_basic.shares") %><br/>
                <%= current_user.reviews.count %>
            </div>
            <div class ="fl m5">
                <%= t("user_basic.fans") %><br/>
                <%= link_to current_user.followers.count, profile_path(current_user) %>

            </div>
            <div class ="fl m5">
                <%= t("user_basic.follows") %><br/>
                <%= link_to current_user.relationships.count, profile_path(current_user) %>
            </div>
        </div>

        <div>
            <b><%= t("control_panel.actions") %></b><br/>
            <%= link_to "", new_recipe_path, :class => "btn_addRecipe m5 fl" %>
            <%= link_to "", edit_profile_path(current_user.profile), :class => "btn_modifyProfile m5 fl" %>
          <br/>
            <% if current_user_has_permission?(:editor) %>
              <div>
                <b><%= t("control_panel.editor_actions") %></b><br/>
                <%= link_to "", new_topic_path, :class => "btn_addTopic m5 fl" %>
                <%= link_to "", new_article_path, :class => "btn_addArticle m5 fl" %>
                <%= link_to "", new_page_path, :class => "btn_addPage m5 fl" %>
              </div>
          <% end %>
        </div>
    </div>
<% end %>