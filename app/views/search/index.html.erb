<div id="brief_report" class="block round">
    <h2><%= t("info_items.report_header")  %><%= get_severity_image("dummy") %></h2>
    <h3><%= t("info_items.report_summary", :name => params[:query], :bad_count => @bad_count, :good_count => @good_count ) %></h3>
    <h4 class="bad">
      <%= t("info_items.report_involved_regions") %>
      <% @bad_region_names.each do |region_name| %>
        <%= link_to(region_name, {:controller => "search", :action => "region", :region_name => region_name}, :class => "tag") %>
      <% end %>
    </h4>
  </div>
<div>
    <ul class="menu" id="actions_menu">
        <li><%= link_to t("reviews.new_review"), new_review_path, :class => "button" %></li>
        <li><%= link_to t("vendors.browse"), vendors_path, :class => "button" %></li>
    </ul>
</div>
<div class="two_columns_container" >
  <div id="bad_items" class="left_column">
    <div class="block round">
        <h2 class="bad"><%= t("info_items.bad_items", :name => params[:query]) %></h2>
        <%= paginate @bad_items %>
        <% @bad_items.each do |item| %>
            <%= render "info_items/info_item_short", :item => item %>
        <% end %>
    </div>
  </div>

  <div id="good_items" class="right_column">
    <div class="block round">
        <h2 class="good"><%= t("info_items.good_items", :name => params[:query]) %></h2>
        <%= paginate @good_items %>
        <% @good_items.each do |item| %>
            <%= render "info_items/info_item_short", :item => item %>
        <% end %>
    </div>
  </div>
</div>
