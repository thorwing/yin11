<div class="grid_3 box_shadow p5">
    <div class="center">
        <%= link_to image_tag( "grey.gif", "class" => 'lazy', "data-original"=> product.get_image_url(:waterfall), :border => 0, :width => IMAGE_WATERFALL_WIDTH, :height => IMAGE_WATERFALL_WIDTH), product%>
    </div>

    <%= link_to product.name, product %> <br/>
    <% if product.price.present? %>
        <%= t_with_colon("products.price") %> <%= t("money.yuan_mark2") %><%= product.price %><br/>
    <% end %>
    <% if product.weight.present? %>
        <%= t_with_colon("products.weight") %> <%= product.weight %><br/>
    <% end %>
    <% if product.producer.present? %>
        <%= t_with_colon("products.producer") %> <%= product.producer %><br/>
    <% end %>
    <% if product.area.present? %>
        <%= t_with_colon("products.area") %> <%= product.area %><br/>
    <% end %>
    <% if product.comments && product.comments.size > 0%>
        <%= product.comments.size.to_s %> <%= t("comments.comment") %><br/>
    <% end %>
</div>
