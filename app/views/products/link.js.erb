$("#facebox #link_spinner").hide();

<% if @valid_url %>
  <% if @product %>
    $(document).trigger('close.facebox');

    if(document.getElementById("product_" + "<%= @product.id.to_s %>")) {
      alert("已添加了该商品");
    }
    else {
        var new_product = '<%= escape_javascript(render("solutions/solution_item", :item => @product)) %>';
        $('#image_container').html(new_product);
        $('#product_id').val("<%= @product.id.to_s %>");
//        $('a[rel*=facebox]').facebox();
    }
  <% else %>
    alert("抱歉，在获取这个商品的时候出了点错误，要不换个商品试试？");
  <% end %>
<% else %>
  alert("恩...我们在您输入的地址找不到商品，请再检查下？");
<% end %>
