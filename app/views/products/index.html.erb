<% title t("products.products_list") %>

<% content_for :left_column do %>
    <div class="block round">
      <%= link_to t("general.all"), products_path %><br/>
      <%= nested_categories Category.all.arrange %>
    </div>
<% end %>

<% content_for :right_column do %>
    <div id="products_container">
        <%= paginate @products %>
        <% @products.each_slice(3) do |slice| %>
            <div class="products_slice">
              <% slice.each do |product| %>
                <div class="waterfall">
                    <%= render "large_product", :product => product %>
                </div>
              <% end %>
            </div>
        <% end %>
        <%= paginate @products %>
    </div>

    <br />
<% end %>

