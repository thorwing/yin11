<div class="box_shadow mb10 p5 clearfix" id="<%= message.id.to_s %>">
    <div class="fl" style="width: 200px;">
        <div class="fl">
            <%= link_to(image_tag("grey.gif", "class" => 'lazy', "data-original"=> target.get_avatar(:thumb, false), width: 50, height: 50), target) %>
        </div>
        <div class="fl ml5">
            <%= link_to target.login_name, target %><br/>
            <span class="trivial" style="vertical-align: top;"><%= message.created_at.strftime(GENERAL_TIME_FORMAT) %></span>
        </div>

    </div>
    <div class="fl ml20">
        <blockquote><span class="quoted"><%= message.content %></span></blockquote>
    </div>
</div>