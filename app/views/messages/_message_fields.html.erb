<div id="message_fields">
    <%= form_tag url_for(:controller => "messages", :method => :post), :remote => true do %>
        <span><%= "只能给粉丝发信哦" %></span><br/>
        <%= text_field_tag "user_id", "", 'data-pre' => (@fan ? [{:id => @fan.id, :name => @fan.login_name}] : []).to_json %>
        <%= text_area_tag :content, "", :maxlength => get_max_length(Message, :content),
        'data-comment_max_len' => get_max_length(Message, :content),
        :rows => 5, :class => "char_aware" %>
        <%= content_tag :span, "", class: "char_saver display_none" %>
        <%= content_tag :span, "", class: "char_counter block trivial" %>
        <div class="m2"><%= submit_tag t("general.submit"), :class => "button submit_comment_btn" %></div>
    <% end %>
</div>