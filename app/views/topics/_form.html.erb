<%= form_for(@topic) do |f| %>
  <%= render "shared/error_messages", :target => @topic %>

  <div class="field">
    <b><%= f.label t("general.title") %></b><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
     <b><%= f.label :tags_string, t("tags.tags") %></b><br/>
     <%= f.text_field :tags_string, 'data-pre' => (f.object.tags ? f.object.tags.map { |t| { :id => t, :name => t }} : []).to_json %>
  </div>
  <div class="field">
    <%= f.label :description, t("general.description") %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :priority, t("topics.priority") %><br />
    <%= f.text_field :priority %>
  </div>
  <%= render "images/images_fields", :f => f, :item => @topic %>

  <div class="actions">
    <%= f.submit t("general.submit"), :class => "button" %>
  </div>
<% end %>

<%= render "info_items/delay_load_stuff" %>
