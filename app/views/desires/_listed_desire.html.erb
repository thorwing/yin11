<div class="listed_item commentable clearfix mt10 mb10">
    <div class="user_info_area">
        <%= link_to image_tag("grey.gif", class: 'lazy', "data-original"=> desire.author.get_avatar(:thumb, false), width: 48, height: 48), desire.author %><br/>
        <%= link_to desire.author.login_name, desire.author %>
    </div>
    <div class="content_area">
        <div class="clearfix">
            <div class="fl mr10 hint_box">
                <%= link_to image_tag(desire.get_image_url(:thumb)), desire %><br/>
            </div>
            <div class="fl" style="width: 500px">
                <p><%= truncate_content(desire.content, 200) %></p>
                <span class="trivial mr5"><%= desire.admirer_ids.size %>人馋到</span> |
                <span class="ml5 mr5 trivial"><%= desire.solutions.count %>解馋方案</span> |
                <span class="ml5 mr5 trivial"><%= desire.votes_count %>投票</span>
                <br/>
                <span class="fl trivial"><%= time_ago_in_words(desire.created_at) + t("general.ago") %></span>

                <div class="fr">
                    <%= render "desires/admire_fields", :desire => desire %>
                </div>
            </div>
        </div>
    </div>
</div>
<hr/>
