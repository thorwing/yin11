<span class="trivial">解馋攻略：</span>
<%= hidden_field_tag "#{type}_id", item.id %>
<div class="mt10">
    <div class="solution_option img_frame mb5 mr5">
      <div class="f12" style="top:0px;left:0px;height: 20px;">
          <span class="fl f11 berry_pink"><%= (t("money.yuan_mark1") + item.price_as_money_string) if item.respond_to?(:price) && item.price? %></span>
          <%= content_tag :span, "", class: "fr icon icon_#{type}" %>
          <%= content_tag :span, t("object_types.#{type}"), class: "fr trivial" %>
      </div>
      <%= image_tag(item.get_image_url(:thumb), width: 100, height: 100, title: t("object_types.#{type}") + " - " + item.name) %>

      <div class="f12" style="width: 100px; height: 26px; overflow: hidden;">
          <%= content_tag :span, "来自", class: "trivial mr2" %>
          <%= new_tab_link_to current_user.login_name, {controller: "users", action: "show", id: current_user.id, force: true}, class: "trivial ml2" %>
      </div>
  </div>
</div>