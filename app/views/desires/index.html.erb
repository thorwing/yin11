<% title t("desires.desire") %>

<% if current_user_has_permission? :normal_user %>
    <div class="ml25 fr">
        <%= link_to "+上传馋人图片", new_desire_path, class: "desire_dialog_btn button" %>
    </div>
<% end %>

<%= render "primary_tags" %>
<div class="clearfix mb10"></div>

<% if params[:tag] %>
    <div class="ml25 mt5 mb5">
        <h2><%= "“#{params[:tag] }”的馋人图片"%></h2>
    </div>
<% end %>

<div class="grid_12">
    <%= render "shared/waterfall", :path => more_desires_path, :waterfall_partial => "desires/desire_waterfall", :columns_count => 4, :columns_width => 230, tag: params[:tag] %>
</div>

